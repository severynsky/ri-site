'use strict';

rotaryApp.config(['$routeProvider',
    function($routeProvider){
        $routeProvider.
            when('/', {
                templateUrl: "<%=asset_path 'assets/templates/home.html' %>",
                controller: 'homeContr'
            }).
            when('/news_items', {
                templateUrl: "<%=asset_path 'assets/templates/news_items.html' %>",
                controller: 'newsListContr'
            }).
            when('/news_items/:newsId', {
                templateUrl: "<%=asset_path 'assets/templates/newspage.html' %>",
                controller: 'newsPageContr'
            }).
            otherwise({
                redirectTo: '#/'
            });
    }
]);

