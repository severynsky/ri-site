%section.popup
  .news-item-page
    .image
      %img(src="{{print.image}}")
      %h3
        {{print.title}}

    .text-container{"id" => "bind-html-with-trust"}
      %p.date
        {{ print.date | date: fullDate }}
      %br
      %p.intro-text
        {{ print.intro }}
      %hr
      %p{"ng-bind-html" => "deliberatelyTrustDangerousSnippet()"}
        -#{{print.body}}
      %hr
%a.fadeout{"ng-href" => "#/news_items"}